<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Icesdk" />

    <style name="Icesdk.Logo">
        <item name="android:src">@drawable/baseline_close_24</item>
    </style>

    <attr name="icesdk_customLogo" format="reference" />

    <style name="Icesdk.Theme.NoActionbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/icesdk_blue</item>
    </style>

    <style name="Icesdk.Theme" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="Icesdk.Theme.Light" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/icesdk_dark_blue</item>
    </style>

    <style name="Icesdk.H2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">@font/coco_sharp_extrabold_trial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Icesdk.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">@font/coco_sharp_extrabold_trial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Icesdk.H4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">@font/coco_sharp_extrabold_trial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Icesdk.H5">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:fontFamily">@font/coco_sharp_bold_trial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Icesdk.H5.Extrabold">
        <item name="android:fontFamily">@font/euclid_circular_b_medium</item>
    </style>

    <style name="Icesdk.H5.Feature">
        <item name="fontFamily">@font/coco_sharp_extrabold_trial</item>
    </style>

    <style name="Icesdk.H6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">@font/coco_sharp_extrabold_trial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Icesdk.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">@font/euclid_circular_b_regular</item>
    </style>

    <style name="Icesdk.Body2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/coco_sharp_regular_trial</item>
    </style>

    <style name="Icesdk.Subtitle1">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="fontFamily">@font/euclid_circular_b_regular</item>
    </style>

    <style name="Icesdk.Underline">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

</resources>
